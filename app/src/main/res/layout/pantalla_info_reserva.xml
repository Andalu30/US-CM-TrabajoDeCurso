<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="0dp">

        <ScrollView
            android:id="@+id/scrollViewReservas"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:cropToPadding="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tennis" />

                <android.support.v7.widget.CardView
                    android:id="@+id/cardProximoEvento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txTituloReservaInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="Titulo de la reserva"
                            android:textAlignment="center"
                            android:textAppearance="@android:style/TextAppearance.Material.Large" />

                        <TextView
                            android:id="@+id/txDescripcionReservaInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="Descripcion de la reserva"
                            android:textAlignment="center"
                            android:textAppearance="@android:style/TextAppearance.Material.SearchResult.Subtitle" />

                        <TextView
                            android:id="@+id/fechaReservaInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="Fecha de la reserva"
                            android:textAlignment="center"
                            android:textAppearance="@android:style/TextAppearance.Material.SearchResult.Subtitle" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="15dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="10dp"
                                        android:text="Horario"
                                        android:textAlignment="center"
                                        android:textAppearance="@android:style/TextAppearance.Holo.Medium" />

                                    <TextView
                                        android:id="@+id/txhorarioReservaInfo"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:padding="10dp"
                                        android:text="00:00"
                                        android:textAlignment="center"
                                        android:textAppearance="@android:style/TextAppearance.Large" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="10dp"
                                        android:text="UbicaciÃ³n"
                                        android:textAlignment="center"
                                        android:textAppearance="@android:style/TextAppearance.Holo.Medium" />

                                    <TextView
                                        android:id="@+id/txubicacionReservaInfo"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="10dp"
                                        android:text="Ubicacion de la reserva"
                                        android:textAlignment="center"
                                        android:textAppearance="@android:style/TextAppearance.Large" />

                                </LinearLayout>

                            </LinearLayout>


                            <Button
                                android:id="@+id/botonGoogleMapsInfo"
                                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Ver en Google Maps" />


                            </LinearLayout>

                        <Button
                            android:id="@+id/botonReservarInfo"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Reservar" />


                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>